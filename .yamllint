---
extends: default

rules:
  # Customize some rules
  line-length:
    max: 120
    level: warning
  document-start: disable
  truthy:
    level: warning
  braces:
    max-spaces-inside: 1
  brackets:
    max-spaces-inside: 1
  commas:
    max-spaces-after: 1
  colons:
    max-spaces-after: 1
  indentation:
    indent-sequences: consistent
  comments: disable
  comments-indentation: disable

ignore: |
  .github/
  molecule/
  .git/